<h4>{{title_case field_name}}</h4>

${this._{{camel_case field_name}}.map(
  (value, i) => html`{{> (concat field_type.type "/" widget "/edit/render") label=(pascal_case field_name) variable_to_read="value" variable_to_change=(camel_case field_name) key="i" }}`
)}

<button  @click=${() => { this._{{camel_case field_name}} = [...this._{{camel_case field_name}}, {{> (concat field_type.type "/" widget "/initial-value") field_type=field_type}}]; } }>
  Add {{title_case field_name}}
</button>